{
  "compilerOptions": {
    "module": "commonjs", // ✅ Стандартно для NestJS
    "moduleResolution": "node", // ✅ Стандартно для Node.js
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022", // ✅ Более стабильная версия
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true, // ✅ Включить для лучшей типизации
    "forceConsistentCasingInFileNames": true,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "esModuleInterop": true,
    "isolatedModules": true
  }
}
